# ============================================
# CONFIGURATION FOR DIFFERENT PROVIDERS
# ============================================

# -------------------- AWS S3 --------------------
S3_PROVIDER=AWS
S3_REGION=us-east-1
S3_ENDPOINT=  # Leave empty for AWS
S3_ACCESS_KEY_ID=your_access_key
S3_SECRET_ACCESS_KEY=your_secret_key
S3_BUCKET_NAME=your_bucket_name
S3_FORCE_PATH_STYLE=false

# ------------ Cloudflare R2 --------------------
# S3_PROVIDER=Cloudflare R2
# S3_REGION=auto
# S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
# S3_ACCESS_KEY_ID=your_r2_access_key
# S3_SECRET_ACCESS_KEY=your_r2_secret_key
# S3_BUCKET_NAME=your_bucket_name
# S3_FORCE_PATH_STYLE=false

# ---------- DigitalOcean Spaces ----------------
# S3_PROVIDER=DigitalOcean Spaces
# S3_REGION=nyc3
# S3_ENDPOINT=https://nyc3.digitaloceanspaces.com
# S3_ACCESS_KEY_ID=your_spaces_key
# S3_SECRET_ACCESS_KEY=your_spaces_secret
# S3_BUCKET_NAME=your_space_name
# S3_FORCE_PATH_STYLE=false

# ------------- Backblaze B2 --------------------
# S3_PROVIDER=Backblaze B2
# S3_REGION=us-west-004
# S3_ENDPOINT=https://s3.us-west-004.backblazeb2.com
# S3_ACCESS_KEY_ID=your_b2_key_id
# S3_SECRET_ACCESS_KEY=your_b2_application_key
# S3_BUCKET_NAME=your_bucket_name
# S3_FORCE_PATH_STYLE=false

# --------------- MinIO -------------------------
# S3_PROVIDER=MinIO
# S3_REGION=us-east-1
# S3_ENDPOINT=http://localhost:9000
# S3_ACCESS_KEY_ID=minioadmin
# S3_SECRET_ACCESS_KEY=minioadmin
# S3_BUCKET_NAME=your_bucket_name
# S3_FORCE_PATH_STYLE=true  # Required for MinIO

# ------------- Wasabi --------------------------
# S3_PROVIDER=Wasabi
# S3_REGION=us-east-1
# S3_ENDPOINT=https://s3.us-east-1.wasabisys.com
# S3_ACCESS_KEY_ID=your_wasabi_key
# S3_SECRET_ACCESS_KEY=your_wasabi_secret
# S3_BUCKET_NAME=your_bucket_name
# S3_FORCE_PATH_STYLE=false

# ---------- Linode Object Storage --------------
# S3_PROVIDER=Linode
# S3_REGION=us-east-1
# S3_ENDPOINT=https://us-east-1.linodeobjects.com
# S3_ACCESS_KEY_ID=your_linode_key
# S3_SECRET_ACCESS_KEY=your_linode_secret
# S3_BUCKET_NAME=your_bucket_name
# S3_FORCE_PATH_STYLE=false